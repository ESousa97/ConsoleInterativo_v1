<Window x:Class="ConsoleInterativo_v1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmação" Height="150" Width="300">
	<Grid Background="#FFDCECFA">
		<TextBlock Text="Você autoriza a realização da padronização do Windows?" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="#FF000000"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
			<Button Content="Sim" Margin="10" Width="80" Height="30" Click="Sim_Click"/>
			<Button Content="Não" Margin="10" Width="80" Height="30" Click="Nao_Click"/>
		</StackPanel>
	</Grid>
</Window>
