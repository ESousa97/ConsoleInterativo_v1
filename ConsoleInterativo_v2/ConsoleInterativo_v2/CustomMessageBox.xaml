<Window x:Class="ConsoleInterativo_v2.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" Height="200" Width="400">
	<Grid>
		<TextBlock Text="{Binding Mensagem}" VerticalAlignment="Top" Margin="10" HorizontalAlignment="Center"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
			<Button Content="{Binding BotaoSimTexto}" Background="{Binding BotaoSimCor}" Margin="5" Click="BotaoSim_Click"/>
			<Button Content="{Binding BotaoNaoTexto}" Background="{Binding BotaoNaoCor}" Margin="5" Click="BotaoNao_Click"/>
		</StackPanel>
	</Grid>
</Window>
